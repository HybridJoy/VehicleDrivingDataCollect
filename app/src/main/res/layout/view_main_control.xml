<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_main_menu"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_double_circle_red" />

    <ImageView
        android:id="@+id/img_data_collection_background"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:src="@drawable/drawable_darkseagreen_rectangle_background"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/img_main_menu"
        app:layout_constraintEnd_toStartOf="@+id/img_main_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_main_menu"
        tools:visibility="visible">
    </ImageView>

    <TextView
        android:id="@+id/text_data_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="monospace"
        android:text="@string/data_collection"
        android:textColor="@color/darkslateblue"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/img_data_collection_background"
        app:layout_constraintEnd_toEndOf="@+id/img_data_collection_background"
        app:layout_constraintStart_toStartOf="@+id/img_data_collection_background"
        app:layout_constraintTop_toTopOf="@+id/img_data_collection_background"
        tools:visibility="visible">
    </TextView>

    <ImageView
        android:id="@+id/img_localization_background"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:src="@drawable/drawable_darkseagreen_rectangle_background"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/img_main_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_main_menu"
        app:layout_constraintTop_toTopOf="@+id/img_main_menu"
        tools:visibility="visible">
    </ImageView>

    <TextView
        android:id="@+id/text_localization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="monospace"
        android:text="@string/localization"
        android:textStyle="bold"
        android:textColor="@color/darkslateblue"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/img_localization_background"
        app:layout_constraintEnd_toEndOf="@+id/img_localization_background"
        app:layout_constraintStart_toStartOf="@+id/img_localization_background"
        app:layout_constraintTop_toTopOf="@+id/img_localization_background"
        tools:visibility="visible">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>